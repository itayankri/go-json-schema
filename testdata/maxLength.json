[
    {
        "description": "a json schema that accepts only strings with 6 characters or less",
        "path": "/v1/maxLength",
        "method": "GET",
        "schema": {
            "type": "string",
            "maxLength": 6
        },
        "tests": [
            {
                "description": "a string with 6 characters",
                "data": "abcdef",
                "valid": true
            },
            {
                "description": "a string with more than 6 characters",
                "data": "abcdefgh",
                "valid": false
            },
            {
                "description": "a string with less then 6 characters",
                "data": "abc",
                "valid": true
            },
            {
                "description": "an empty string",
                "data": "",
                "valid": true
            },
            {
                "description": "a 4 digit integer",
                "data": 4444,
                "valid": false
            },
            {
                "description": "null",
                "data": null,
                "valid": false
            }
        ]
    },
    {
        "description": "a json schema that accepts only strings with 6 characters or less, if the inspected value is a string",
        "path": "/v1/maxLength",
        "method": "GET",
        "schema": {
            "maxLength": 6
        },
        "tests": [
            {
                "description": "a string with 6 characters",
                "data": "abcdef",
                "valid": true
            },
            {
                "description": "a string with more than 6 characters",
                "data": "abcdefgh",
                "valid": false
            },
            {
                "description": "a string with more less 6 characters",
                "data": "abc",
                "valid": true
            },
            {
                "description": "an empty string",
                "data": "",
                "valid": true
            },
            {
                "description": "a 4 digit integer",
                "data": 4444,
                "valid": true
            },
            {
                "description": "a json object",
                "data": {"a": true},
                "valid": true
            },
            {
                "description": "a json array",
                "data": ["a", "b", 5],
                "valid": true
            },
            {
                "description": "a json number",
                "data": 5.6,
                "valid": true
            },
            {
                "description": "null",
                "data": null,
                "valid": true
            }
        ]
    }
]